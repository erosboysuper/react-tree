{
  "include": ["src"],
  "exclude": ["node_modules", "dist", "src/stories", "src/__tests__", "src/mocks"],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "checkJs": true,
    "declaration": true,
    "declarationDir": "types",
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "isolatedModules": false,
    "jsx": "react",
    "lib": ["es6", "dom", "es2016", "es2017", "es2018", "es2019"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitUseStrict": false,
    "noLib": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "js",
    "removeComments": false,
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es5",
    "paths": {
      "@naisu-tech/react-tree": ["./src/index"],
      "@naisu-tech/react-tree/*": ["./src/*"]
    }
  },
  "filesGlob": ["./src/**/*.ts", "./src/**/*.tsx"]
}
